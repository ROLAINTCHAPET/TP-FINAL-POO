<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EventManagementController">
    <top>
        <VBox>
            <!-- Header -->
            <HBox alignment="CENTER" style="-fx-background-color: #2E3440; -fx-padding: 20;">
                <Label text="Gestion des Événements" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>

            <!-- Navigation Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #3B4252; -fx-padding: 10;">
                <Button fx:id="btnAccueil" mnemonicParsing="false" onAction="#handleBtnAccueil" style="-fx-background-color: #5E81AC; -fx-text-fill: white;" text="Accueil" />
                <Button fx:id="btnEvenements" mnemonicParsing="false" onAction="#handleBtnEvenements" style="-fx-background-color: #5E81AC; -fx-text-fill: white;" text="Événements" />
                <Button fx:id="btnParticipants" mnemonicParsing="false" onAction="#handleBtnParticipants" style="-fx-background-color: #5E81AC; -fx-text-fill: white;" text="Participants" />
                <Button fx:id="btnRapports" mnemonicParsing="false" onAction="#handleBtnRapports" style="-fx-background-color: #5E81AC; -fx-text-fill: white;" text="Rapports" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- Section principale des événements -->
            <VBox prefWidth="600.0" spacing="15.0">
                <!-- Titre et boutons d'action -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Gestion des Événements">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnNouvelEvenement" mnemonicParsing="false" onAction="#handleBtnNouvelEvenement" style="-fx-background-color: #A3BE8C; -fx-text-fill: white;" text="+ Nouvel Événement" />
                </HBox>

                <!-- Filtres par type d'événement -->
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Filtrer par type:" />
                    <ToggleGroup fx:id="typeFilter" />
                    <RadioButton fx:id="rbTous" mnemonicParsing="false" onAction="#handleFilterTous" selected="true" text="Tous" toggleGroup="$typeFilter" />
                    <RadioButton fx:id="rbConcerts" mnemonicParsing="false" onAction="#handleFilterConcerts" text="Concerts" toggleGroup="$typeFilter" />
                    <RadioButton fx:id="rbConferences" mnemonicParsing="false" onAction="#handleFilterConferences" text="Conférences" toggleGroup="$typeFilter" />
                </HBox>

                <!-- TabPane pour organiser les événements -->
                <TabPane fx:id="tabPaneEvenements" prefHeight="500.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <!-- Onglet Concerts -->
                        <Tab text="Concerts">
                            <content>
                                <VBox spacing="10.0">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>

                                    <!-- En-tête des concerts -->
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <Label text="Concerts Programmés">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="btnNouveauConcert" mnemonicParsing="false" onAction="#handleBtnNouveauConcert" style="-fx-background-color: #BF616A; -fx-text-fill: white;" text="+ Nouveau Concert" />
                                    </HBox>

                                    <!-- Liste des concerts -->
                                    <TableView fx:id="tableConcerts" prefHeight="400.0">
                                        <columns>
                                            <TableColumn fx:id="colConcertNom" prefWidth="150.0" text="Nom du Concert" />
                                            <TableColumn fx:id="colConcertArtiste" prefWidth="120.0" text="Artiste" />
                                            <TableColumn fx:id="colConcertDate" prefWidth="100.0" text="Date" />
                                            <TableColumn fx:id="colConcertLieu" prefWidth="120.0" text="Lieu" />
                                            <TableColumn fx:id="colConcertCapacite" prefWidth="80.0" text="Capacité" />
                                            <TableColumn fx:id="colConcertActions" prefWidth="100.0" text="Actions" />
                                        </columns>
                                    </TableView>
                                </VBox>
                            </content>
                        </Tab>

                        <!-- Onglet Conférences -->
                        <Tab text="Conférences">
                            <content>
                                <VBox spacing="10.0">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>

                                    <!-- En-tête des conférences -->
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                        <Label text="Conférences Programmées">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="btnNouvelleConference" mnemonicParsing="false" onAction="#handleBtnNouvelleConference" style="-fx-background-color: #D08770; -fx-text-fill: white;" text="+ Nouvelle Conférence" />
                                    </HBox>

                                    <!-- Liste des conférences -->
                                    <TableView fx:id="tableConferences" prefHeight="400.0">
                                        <columns>
                                            <TableColumn fx:id="colConferenceNom" prefWidth="150.0" text="Nom de la Conférence" />
                                            <TableColumn fx:id="colConferenceOrateur" prefWidth="120.0" text="Orateur" />
                                            <TableColumn fx:id="colConferenceDate" prefWidth="100.0" text="Date" />
                                            <TableColumn fx:id="colConferenceLieu" prefWidth="120.0" text="Lieu" />
                                            <TableColumn fx:id="colConferenceDuree" prefWidth="80.0" text="Durée" />
                                            <TableColumn fx:id="colConferenceActions" prefWidth="100.0" text="Actions" />
                                        </columns>
                                    </TableView>
                                </VBox>
                            </content>
                        </Tab>

                        <!-- Onglet Vue d'ensemble -->
                        <Tab text="Vue d'ensemble">
                            <content>
                                <VBox spacing="15.0">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>

                                    <!-- Statistiques rapides -->
                                    <HBox spacing="20.0">
                                        <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #ECEFF4; -fx-padding: 15; -fx-background-radius: 5;">
                                            <Label fx:id="lblNbConcerts" text="12">
                                                <font>
                                                    <Font name="System Bold" size="24.0" />
                                                </font>
                                            </Label>
                                            <Label text="Concerts" />
                                        </VBox>

                                        <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #ECEFF4; -fx-padding: 15; -fx-background-radius: 5;">
                                            <Label fx:id="lblNbConferences" text="8">
                                                <font>
                                                    <Font name="System Bold" size="24.0" />
                                                </font>
                                            </Label>
                                            <Label text="Conférences" />
                                        </VBox>

                                        <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #ECEFF4; -fx-padding: 15; -fx-background-radius: 5;">
                                            <Label fx:id="lblTotalParticipants" text="1,245">
                                                <font>
                                                    <Font name="System Bold" size="24.0" />
                                                </font>
                                            </Label>
                                            <Label text="Participants" />
                                        </VBox>
                                    </HBox>

                                    <!-- Prochains événements -->
                                    <VBox spacing="10.0">
                                        <Label text="Prochains Événements">
                                            <font>
                                                <Font name="System Bold" size="16.0" />
                                            </font>
                                        </Label>

                                        <ListView fx:id="listProchainsEvenements" prefHeight="300.0" />
                                    </VBox>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>

            <!-- Panneau de notifications -->
            <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: #F5F5F5; -fx-padding: 15; -fx-background-radius: 5;">
                <!-- En-tête des notifications -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Notifications">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnEffacerNotifications" mnemonicParsing="false" onAction="#handleBtnEffacerNotifications" style="-fx-background-color: #4C566A; -fx-text-fill: white;" text="Effacer tout" />
                </HBox>

                <!-- Compteur de notifications -->
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <Label text="Nouvelles notifications:" />
                    <Label fx:id="lblNbNotifications" style="-fx-background-color: #BF616A; -fx-text-fill: white; -fx-padding: 2 8 2 8; -fx-background-radius: 10;" text="3" />
                </HBox>

                <!-- Liste des notifications -->
                <ScrollPane fitToWidth="true" prefHeight="450.0">
                    <content>
                        <VBox fx:id="vboxNotifications" spacing="8.0">
                            <!-- Notification exemple 1 -->
                            <VBox spacing="5.0" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 3; -fx-border-color: #E5E9F0; -fx-border-radius: 3;">
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label style="-fx-background-color: #A3BE8C; -fx-text-fill: white; -fx-padding: 2 6 2 6; -fx-background-radius: 2;" text="NOUVEAU" />
                                    <Label text="Il y a 5 min" textFill="#8FBCBB">
                                        <font>
                                            <Font size="10.0" />
                                        </font>
                                    </Label>
                                </HBox>
                                <Label text="Nouvelle inscription au concert de Jazz" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="Marie Dupont s'est inscrite au concert de demain soir." wrapText="true">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Notification exemple 2 -->
                            <VBox spacing="5.0" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 3; -fx-border-color: #E5E9F0; -fx-border-radius: 3;">
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label style="-fx-background-color: #EBCB8B; -fx-text-fill: white; -fx-padding: 2 6 2 6; -fx-background-radius: 2;" text="RAPPEL" />
                                    <Label text="Il y a 1h" textFill="#8FBCBB">
                                        <font>
                                            <Font size="10.0" />
                                        </font>
                                    </Label>
                                </HBox>
                                <Label text="Conférence dans 2 jours" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="N'oubliez pas de préparer la salle pour la conférence sur l'IA." wrapText="true">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Notification exemple 3 -->
                            <VBox spacing="5.0" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 3; -fx-border-color: #E5E9F0; -fx-border-radius: 3;">
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label style="-fx-background-color: #BF616A; -fx-text-fill: white; -fx-padding: 2 6 2 6; -fx-background-radius: 2;" text="URGENT" />
                                    <Label text="Il y a 2h" textFill="#8FBCBB">
                                        <font>
                                            <Font size="10.0" />
                                        </font>
                                    </Label>
                                </HBox>
                                <Label text="Capacité maximale atteinte" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="Le concert de ce soir a atteint sa capacité maximale." wrapText="true">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </VBox>

                            <!-- Notification exemple 4 -->
                            <VBox spacing="5.0" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 3; -fx-border-color: #E5E9F0; -fx-border-radius: 3;">
                                <HBox alignment="CENTER_LEFT" spacing="5.0">
                                    <Label style="-fx-background-color: #5E81AC; -fx-text-fill: white; -fx-padding: 2 6 2 6; -fx-background-radius: 2;" text="INFO" />
                                    <Label text="Hier" textFill="#8FBCBB">
                                        <font>
                                            <Font size="10.0" />
                                        </font>
                                    </Label>
                                </HBox>
                                <Label text="Rapport mensuel disponible" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="12.0" />
                                    </font>
                                </Label>
                                <Label text="Le rapport d'activité du mois dernier est maintenant disponible." wrapText="true">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </VBox>
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <!-- Barre de statut -->
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #4C566A; -fx-padding: 10;">
            <Label fx:id="lblStatut" text="Prêt" textFill="WHITE" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblDateHeure" text="22 Mai 2025 - 14:30" textFill="WHITE" />
        </HBox>
    </bottom>
</BorderPane>




<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="20.0" style="-fx-padding: 40; fx:controller="com.example.events.EventManagementController">
    <Label text="Bienvenue sur la plateforme de gestion des événements">
         <font><Font name="System Bold" size="20.0" /></font>
    </Label>
    <Label text="Utilisez le menu ci-dessus pour accéder aux différentes sections." wrapText="true" textAlignment="CENTER" maxWidth="600.0"/>
</VBox>
