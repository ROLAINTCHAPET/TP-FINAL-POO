<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.events.Controllers.EventManagementController">
    <top>
        <VBox>
            <HBox alignment="CENTER" style="-fx-background-color: #2E3440; -fx-padding: 20;">
                <Label text="Gestion des Événements" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #3B4252; -fx-padding: 10;">
                <Button fx:id="btnEvenements" onAction="#handleBtnEvenements" style="-fx-background-color: #5E81AC; -fx-text-fill: dark;" text="Événements" />
                <Button fx:id="btnParticipants" onAction="#handleBtnParticipants" style="-fx-background-color: #5E81AC; -fx-text-fill: white;" text="Participants" />
                <Button fx:id="btnRapports" onAction="#handleBtnRapports" style="-fx-background-color: #5E81AC; -fx-text-fill: white;" text="Rapports" />
            </HBox>
        </VBox>
    </top>

    <center>
        <HBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Zone principale -->
            <VBox prefWidth="600.0" spacing="15.0">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Gestion des Événements">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
               <Button mnemonicParsing="false" onAction="#openregistrationpage" prefHeight="24.0" prefWidth="160.0" style="-fx-background-color: #A3BE8C; -fx-text-fill: white;" text="Nouveau Participant" />
                    <Button fx:id="btnNouvelEvenement" onAction="#handleBtnNouvelEvenement" style="-fx-background-color: #A3BE8C; -fx-text-fill: white;" text="+ Nouvel Événement" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <Label text="Filtrer par type:" />
                    <RadioButton fx:id="rbTous" onAction="#handleFilterTous" selected="true" text="Tous" />
                    <RadioButton fx:id="rbConcerts" onAction="#handleFilterConcerts" text="Concerts" />
                    <RadioButton fx:id="rbConferences" onAction="#handleFilterConferences" text="Conférences" />
                </HBox>

                <TabPane fx:id="tabPaneEvenements" prefHeight="500.0" tabClosingPolicy="UNAVAILABLE">
                    <tabs>
                        <Tab text="Concerts">
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <Label text="Concerts Programmés">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnNouveauConcert" onAction="#handleBtnNouveauConcert" style="-fx-background-color: #BF616A; -fx-text-fill: white;" text="+ Nouveau Concert" />
                                </HBox>
                                <TableView fx:id="tableConcerts" prefHeight="400.0">
                                    <columns>
                                        <TableColumn fx:id="colConcertNom" prefWidth="150.0" text="Nom du Concert" />
                                        <TableColumn fx:id="colConcertArtiste" prefWidth="120.0" text="Artiste" />
                                        <TableColumn fx:id="colConcertDate" prefWidth="100.0" text="Date" />
                                        <TableColumn fx:id="colConcertLieu" prefWidth="120.0" text="Lieu" />
                                        <TableColumn fx:id="colConcertCapacite" prefWidth="80.0" text="Capacité" />
                                        <TableColumn fx:id="colConcertActions" prefWidth="100.0" text="Actions" />
                                    </columns>
                                </TableView>
                            </VBox>
                        </Tab>

                        <Tab text="Conférences">
                            <VBox spacing="10.0">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <Label text="Conférences Programmées">
                                        <font>
                                            <Font name="System Bold" size="16.0" />
                                        </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnNouvelleConference" onAction="#handleBtnNouvelleConference" style="-fx-background-color: #D08770; -fx-text-fill: white;" text="+ Nouvelle Conférence" />
                                </HBox>
                                <TableView fx:id="tableConferences" prefHeight="400.0">
                                    <columns>
                                        <TableColumn fx:id="colConferenceNom" prefWidth="150.0" text="Nom de la Conférence" />
                                        <TableColumn fx:id="colConferenceOrateur" prefWidth="120.0" text="Orateur" />
                                        <TableColumn fx:id="colConferenceDate" prefWidth="100.0" text="Date" />
                                        <TableColumn fx:id="colConferenceLieu" prefWidth="120.0" text="Lieu" />
                                        <TableColumn fx:id="colConferenceDuree" prefWidth="80.0" text="Durée" />
                                        <TableColumn fx:id="colConferenceActions" prefWidth="100.0" text="Actions" />
                                    </columns>
                                </TableView>
                            </VBox>
                        </Tab>

                        <Tab text="Vue d'ensemble">
                            <VBox spacing="15.0">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>
                                <HBox spacing="20.0">
                                    <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #ECEFF4; -fx-padding: 15; -fx-background-radius: 5;">
                                        <Label fx:id="lblNbConcerts" text="12">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                        </Label>
                                        <Label text="Concerts" />
                                    </VBox>
                                    <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #ECEFF4; -fx-padding: 15; -fx-background-radius: 5;">
                                        <Label fx:id="lblNbConferences" text="8">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                        </Label>
                                        <Label text="Conférences" />
                                    </VBox>
                                    <VBox alignment="CENTER" spacing="5.0" style="-fx-background-color: #ECEFF4; -fx-padding: 15; -fx-background-radius: 5;">
                                        <Label fx:id="lblTotalParticipants" text="1,245">
                                            <font><Font name="System Bold" size="24.0" /></font>
                                        </Label>
                                        <Label text="Participants" />
                                    </VBox>
                                </HBox>
                                <VBox spacing="10.0">
                                    <Label text="Prochains Événements">
                                        <font><Font name="System Bold" size="16.0" /></font>
                                    </Label>
                                    <ListView fx:id="listProchainsEvenements" prefHeight="300.0" />
                                </VBox>
                            </VBox>
                        </Tab>
                    </tabs>
                </TabPane>
            </VBox>

            <!-- Notifications -->
            <VBox prefWidth="300.0" spacing="10.0" style="-fx-background-color: #F5F5F5; -fx-padding: 15; -fx-background-radius: 5;">
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label text="Notifications">
                        <font><Font name="System Bold" size="16.0" /></font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="btnEffacerNotifications" onAction="#handleBtnEffacerNotifications" style="-fx-background-color: #4C566A; -fx-text-fill: white;" text="Effacer tout" />
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <Label text="Nouvelles notifications:" />
                    <Label fx:id="lblNbNotifications" style="-fx-background-color: #BF616A; -fx-text-fill: white; -fx-padding: 2 8 2 8; -fx-background-radius: 10;" text="3" />
                </HBox>
                <ScrollPane fx:id="notifid" fitToWidth="true" prefHeight="450.0" prefWidth="450.0">
                    <VBox fx:id="vboxNotifications" spacing="8.0" />
                </ScrollPane>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #4C566A; -fx-padding: 10;">
            <Label fx:id="lblStatut" text="Prêt" textFill="WHITE" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="lblDateHeure" text="22 Mai 2025 - 14:30" textFill="WHITE" />
        </HBox>
    </bottom>
</BorderPane>
